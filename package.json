		"autoprefixer": "^10.4.21",
		"postcss": "^8.5.6",
		"sharp": "^0.34.4",
		"svelte": "^5.41.0",
		"svelte-check": "^4.3.3",
		"tailwindcss": "^3.4.18",
		"typescript": "^5.9.3",
		"vite": "^7.1.10",
		"vite-plugin-pwa": "^1.1.0"
	},
	"dependencies": {
		"browser-image-compression": "^2.0.2",
