{
	"name": "draix-garden",
	"version": "1.0.0",
	"description": "A mobile-optimized PWA for tracking and managing garden plants with AI-powered care recommendations",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
